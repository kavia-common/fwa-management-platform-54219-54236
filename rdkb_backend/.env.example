# Server
APP_NAME=RDKB Backend API
APP_ENV=development
APP_DEBUG=true
APP_HOST=0.0.0.0
APP_PORT=8000
CORS_ALLOW_ORIGINS=*

# Security
SECRET_KEY=change-this-in-production
